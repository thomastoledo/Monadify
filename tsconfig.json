{
    "compilerOptions": {
      "target": "ES6",                       // Définit la version cible du code JS
      "module": "commonjs",                   // Utilise le module CommonJS
      "outDir": "./dist",                     // Place le code compilé dans le dossier dist
      "rootDir": "./",                        // Définit la racine du projet
      "strict": true,                         // Active toutes les vérifications strictes
      "esModuleInterop": true,                // Assure une compatibilité avec les modules ES
      "skipLibCheck": true                    // Ignore la vérification des types des fichiers de bibliothèque
    },
    "include": [
      "pelouse.ts"                           // Inclut ton fichier TypeScript
    ],
    "exclude": [
      "node_modules"                          // Exclut le dossier node_modules
    ]
  }